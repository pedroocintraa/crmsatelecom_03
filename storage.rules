rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Permitir acesso autenticado para vendas
    match /vendas/{vendedorId}/{fileName} {
      allow read, write: if request.auth != null;
    }
    
    // Permitir acesso autenticado para uploads gerais
    match /uploads/{userId}/{fileName} {
      allow read, write: if request.auth != null;
    }
    
    // Regra padr√£o - negar tudo
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
} 